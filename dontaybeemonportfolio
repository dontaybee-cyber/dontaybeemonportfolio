<script>
  (function(){
    // Replace placeholders quickly if you want to update via JS
    const PDF_URL = 'PDF_URL'; // <-- Replace with hosted PDF path (absolute)
    const QR_URL = 'QR_IMAGE_URL'; // <-- Replace with hosted QR image path (absolute)

    // Wire actual URLs into DOM (only if you put placeholders)
    document.querySelectorAll('a[href="PDF_URL"]').forEach(a => a.href = PDF_URL);
    document.querySelectorAll('object[data="PDF_URL"]').forEach(o => o.data = PDF_URL);
    document.querySelectorAll('a[href="PDF_URL"][download]').forEach(a => a.href = PDF_URL);
    document.querySelectorAll('img#db-qr').forEach(img => { if(img.src.indexOf('QR_IMAGE_URL')>-1) img.src = QR_URL; });

    // View in Browser — open PDF in new tab
    document.getElementById('db-view').addEventListener('click', function(){
      window.open(PDF_URL, '_blank');
      trackEvent('view_deck');
    });
    document.getElementById('db-download').addEventListener('click', function(){
      trackEvent('download_deck');
    });
    document.getElementById('db-fallback-download')?.addEventListener('click', function(){
      trackEvent('download_deck_fallback');
    });

    // Simple analytics hook: replace with your analytics call
    function trackEvent(action){
      console.log('Deck event:', action);
      // Example: if using Google Analytics gtag:
      // window.gtag && window.gtag('event', action, { 'event_category': 'Deck', 'event_label': 'Master Deck' });
    }
  })();
</script>
